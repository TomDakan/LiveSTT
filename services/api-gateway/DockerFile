# services/api-gateway/Dockerfile

FROM ghcr.io/astral-sh/uv:latest as builder
ENV UV_COMPILE_BYTECODE=1 \
    UV_LINK_MODE=copy

WORKDIR /app

# Copy root workspace config
COPY pyproject.toml uv.lock ./
# Copy service config
COPY services/api-gateway/pyproject.toml ./services/api-gateway/pyproject.toml

# Sync dependencies (caching layer)
RUN uv sync --frozen --no-install-project --package api-gateway

FROM python:3.12-slim
WORKDIR /app

# Copy venv
COPY --from=builder /app/.venv /app/.venv
ENV PATH="/app/.venv/bin:$PATH"

# Copy service code
COPY services/api-gateway ./services/api-gateway
# Copy root src if needed (shared code)
COPY src ./src

# Install project
RUN uv sync --frozen --package api-gateway

# Run
CMD ["uv", "run", "uvicorn", "services.api_gateway.app.main:app", "--host", "0.0.0.0"]
