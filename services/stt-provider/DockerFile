# services/stt-provider/Dockerfile

# services/stt-provider/Dockerfile

FROM python:3.12-slim as builder
COPY --from=ghcr.io/astral-sh/uv:latest /uv /bin/uv

ENV UV_COMPILE_BYTECODE=1 \
    UV_LINK_MODE=copy

WORKDIR /app

# Copy root workspace config
COPY pyproject.toml uv.lock ./
# Copy service config
COPY services/stt-provider/pyproject.toml ./services/stt-provider/pyproject.toml
# Copy shared libs config
COPY libs/messaging/pyproject.toml ./libs/messaging/pyproject.toml

# Sync dependencies
RUN uv sync --frozen --no-install-project --package stt-provider

FROM python:3.12-slim
WORKDIR /app

# Copy venv
COPY --from=builder /app/.venv /app/.venv
ENV PATH="/app/.venv/bin:$PATH"
ENV PYTHONUNBUFFERED=1

# Copy shared libs
COPY libs/messaging ./libs/messaging

# Copy service code
COPY services/stt-provider ./services/stt-provider

# Install project
# RUN uv sync --frozen --package stt-provider

ENV PYTHONPATH="/app/services/stt-provider/src:/app/libs/messaging/src:$PYTHONPATH"
CMD ["python", "-m", "stt_provider.main"]
