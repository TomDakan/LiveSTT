# services/stt-provider/Dockerfile

FROM ghcr.io/astral-sh/uv:latest as builder
ENV UV_COMPILE_BYTECODE=1 \
    UV_LINK_MODE=copy

WORKDIR /app

# Copy root workspace config
COPY pyproject.toml uv.lock ./
# Copy service config
COPY services/stt-provider/pyproject.toml ./services/stt-provider/pyproject.toml

# Sync dependencies
RUN uv sync --frozen --no-install-project --package stt-provider

FROM python:3.12-slim
WORKDIR /app

# Copy venv
COPY --from=builder /app/.venv /app/.venv
ENV PATH="/app/.venv/bin:$PATH"

# Copy service code
COPY services/stt-provider ./services/stt-provider
# Copy root src if needed
COPY src ./src

# Install project
RUN uv sync --frozen --package stt-provider

CMD ["uv", "run", "python", "-m", "services.stt_provider.src.main"]
